<div class="main">
  <h2 class="ui center aligned header" id= "login-header">
    Group-message-app
  </h2>
  <div id= "login-form">
    <%= form_for(:session, html: { class: "ui form", role: "form"}, url: login_path) do |f| %>
      <div class="field">
        <div class="ui left icon input">
          <%= f.text_field :username, class: "login-input", placeholder: "Username"%>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <div class="ui left icon input login-input">
          <%= f.password_field :password, class: "login-input", placeholder: "Password"%>
          <i class="lock icon"></i>
        </div>
      </div>
        <%= f.button "Login", class: "login-button" %>
      </div>
    <% end %>
  </div>
</div>
